    "id": {
      "oneOf": [{
        "type": "number"
      }, {
      "type": "string"
      }]
    },

    "entity": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "class": {
          "$ref": "#/definitions/class"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/entity"
          }
        },
        "description": {
          "type": "string"
        }
      }
    }
  },

  "$ref": "#/definitions/entity",
  "required": [
    "class"
  ]
}
